<div class="body"> 
  <div class="container-fluid">
    <div class="row">
        <%= render 'layouts/sideber', genres: @genres %>
      <div class="col-xs-10">
      <!--レビュー数が多い作品順-->
        <h3>人気作品トップ３</h3>
          <% @rank_movies.each do |rank_movie| %>
            <div class="box" style="float:left; margin-right:120px;">
              <%= link_to movie_path(rank_movie) do %>
                <%= attachment_image_tag rank_movie, :image, size:'200x150', fallback: "no_image.jpg", size:'200x150' %><br>
              <% end %>
              <p><%= rank_movie.title %></p>
              <p>星評価</p>
            </div>
          <% end %>
    	  <p><%= link_to "もっと見る>", movies_path %></p>
      </div>
    </div>
  </div>
</div>