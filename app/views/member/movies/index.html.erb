<div class="body">
  <div class="container-fluid">
    </br>
    <div class="row">
      <%= render 'layouts/sideber', genres: @genres %>
      <div class="col-xs-7">
        <h2 class="col-xs-offset-1">作品一覧<span style="font-size:20px;">（全<%= @movies.total_count %>件）</span></h2><br>
        <div class="row">
          <div class="col-xs-12 col-xs-offset-1">
  	      <% @movies.each do |movie| %>
            <div class="box" style="float:left; margin:0 120px 30px 0;">
              <p class='text-center'>
                <%= link_to movie_path(movie), data: {"turbolinks" => false} do %>
                  <%= attachment_image_tag movie, :image, size:'200x150', fallback: "no_image.jpg", size:'200x150' %><br>
                  <%= movie.title %>
                <% end %>
              </p>
              <p class='text-center'><%= render 'member/reviews/average-star', movie: movie %></p>
            </div>
          <% end %>
  	    </div>
        <div class="text-center">
          <%= paginate @movies %>
        </div>
      </div>
    </div>
  </div>
</div>