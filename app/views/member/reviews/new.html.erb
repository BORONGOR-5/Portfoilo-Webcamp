<div class="body">
  <div class="container-fluid">
    <br>
    <div class="row">
      <%= render "layouts/errors", obj: @review %>
      <%= render 'layouts/sideber', genres: @genres %>
      <div class="col-xs-offset-1 col-xs-5 row" style="padding-top: 20px">
        <!--画面遷移前のリンク-->
        <%= link_to "トップ", root_path, data: {"turbolinks" => false} %>
        >
        <%= link_to "作品一覧", movies_path, data: {"turbolinks" => false} %>
        >
        <%= link_to movie_path(@movie), data: {"turbolinks" => false} do %>
          <%= @movie.title %>の詳細
        <% end %>
        >
        <%= @movie.title %>のレビュー投稿
        <h2><%= @movie.title %>のレビューを投稿する</h2>
        <br>
        <div class="row">
          <div class="col-xs-12">
    	      <%= form_with model: @review, url: reviews_path(movie_id: @movie.id), method: :post, local: true do |f| %>
              <%= render "form", f: f %>
              <div style="margin-right: 110px">
                <%= f.submit "レビューを投稿する",  class: "btn btn-primary btn-md center-block", data: {"turbolinks" => false} %>
              </div>
            <% end %>
    	    </div>
        </div>
      </div>
    </div>
  </div>
</div>