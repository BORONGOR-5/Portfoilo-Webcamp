<div class="body">
  <div class="container-fluid">
    </br>
    <div class="row">
      <%= render "layouts/sideber", genres: @genres %>
      <div class="col-xs-12">
        <div class="col-xs-6">
          <h2><%= @member.name %>さんのマイページ</h2>
          
          <% if member_signed_in? %>
            <% if @member == current_member %>
              <%= link_to 'プロフィール編集', edit_member_path %>
              <%= link_to 'パスワード変更', edit_member_registration_path %><br>
              <%= link_to @member.followings.count, followings_path(member_id: @member.id) %>フォロー
              <%= link_to @member.followers.count, followers_path(member_id: @member.id) %>フォロワー<br>
              <%= link_to 'レビュー一覧', edit_member_path %>
              <%= link_to 'お気に入り一覧', bookmarks_path %>
              <%= link_to 'コメント一覧', edit_member_path %><br>
            <% else  %>
              <%= render "member/relationships/follow-btn", member: @member %>
              <!--<= link_to 'DM機能',  %>-->
              <br>
              <%= link_to @member.followings.count, followings_path(member_id: @member.id) %>フォロー
              <%= link_to @member.followers.count, followers_path(member_id: @member.id) %>フォロワー<br>
              <%= link_to 'レビュー一覧', edit_member_path %>
              <%= link_to 'お気に入り一覧', edit_member_path %>
              <%= link_to 'コメント一覧', edit_member_path %><br>
            <% end %>
          <% else %>
            
          <% end %>
        </div>
        <div class="col-xs-6">
          <h3>プロフィール</h3>
          <p>自己紹介文<%= @member.introduction %></p>
          <p><strong>性別</strong><%= @member.sex %>
          <strong>生年月日</strong><%= @member.birthday %></p>
          <p>生涯ベスト１位<%= @member.best1 %></p>
          <p style="margin: 0 0 20px 80px">２位<%= @member.best2 %></p>
          <p style="margin: 0 0 0 80px">３位<%= @member.best3 %></p> 
        </div>
      </div>
    </div>
    
    
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-9 center-block" style="margin: 20px 0 50px 0">
        <h3 class><%= @member.name %>さんのレビュー作品</h3>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr bgcolor="#dcdcdc">
              <th>レビュー作品</th>
              <th>レビュータイトル</th>
              <th>評価</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= link_to movie_path(review.movie) do %><%= review.movie.title %><% end %></td>
                <!--showページではなくeditページにとぶ-->
                <td></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    
  </div>
</div>