<table>
  <h2>ブックマーク一覧</h2>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>画像</th>
      <th>星評価</th>
    </tr>
  </thead>
  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td>
          <%= link_to movie_path(bookmark.movie) do %>
            <%= bookmark.movie.title %>
          <% end %>
        </td>
        <td>
          <%= link_to movie_path(bookmark.movie), data: {"turbolinks" => false} do %>
            <%= attachment_image_tag bookmark.movie, :image, size:'200x150', fallback: "no_image.jpg", size:'200x150' %><br>
          <% end %></td>
        <td><%= render 'member/reviews/average-star', movie: bookmark.movie %></td>
      </tr>
    <% end %>
  </tbody>
</table>