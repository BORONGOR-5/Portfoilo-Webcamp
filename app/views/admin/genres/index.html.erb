<div class="body">
  <div class="container">
    <h2 class="text-center">ジャンル一覧・追加</h2>
      <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
          <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
            <div>
              <i>ジャンル</i>
              <%= f.text_field :name %>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "有効", {value: :true} %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "無効", {value: :false} %>
              <%= f.submit "追加", class: "btn btn-info" %>
            </div>
          <% end %>
          <br>
          <table class="table table-hover table-bordered">
            <thead>
              <tr>
                <th class="col-xs-1 text-center">ジャンル</th>
                <th class="text-center">状態</th>
                <th class="text-center"></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td class="col-xs-2 text-center"><%= genre.name %></td>
                    <% if genre.is_active == true %>
                      <td class="col-xs-1 text-center">有効</td>
                    <% elsif genre.is_active == false %>
                      <td class="col-xs-1 text-center">無効</td>
                    <% end %>
                   <td class="col-xs-1 text-center"><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>