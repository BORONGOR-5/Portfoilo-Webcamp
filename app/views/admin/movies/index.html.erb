<div class="body">
  <div class="container">
    <h1>作品一覧</h1>
      <div class="row">
        <div class="col-xs-6">
          <table class="table table-hover table-bordered">
            <thead>
              <tr>
                <th>作品ID</th>
                <th>作品名</th>
                <th>ジャンル</th>
              </tr>
            </thead>
            <tbody>
              <% @movies.each do |movie| %>
                <tr>
                  <td><%= movie.id %></td>
                  <td><%= movie.title %></td>
                  <td><%= movie.genre.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>