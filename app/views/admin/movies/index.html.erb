<div class="container">
  <div class="row">
    作品一覧
    <div class="col-xs-12 center-block" style="margin: 20px 0 50px 0">
      <h2 class='col-xs-8'>作品一覧</h2>
      
    </div>
    <div class="col-xs-12 center-block row">
      <%= link_to new_admin_movie_path, class: "btn btn-info pull-right" do %>
        <i class="fas fa-plus">新規作品登録</i>
      <% end %>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th class="text-center">作品ID</th>
            <th>作品名</th>
            <th class="text-center">ジャンル</th>
            <th class="text-center">評価</th>
          </tr>
        </thead>
        <tbody>
          <% @movies.each do |movie| %>
            <tr>
              <td class="text-center"><%= movie.id %></td>
              <td>
                <%= link_to admin_movie_path(movie), data: {"turbolinks" => false} do %>
                  <%= movie.title %>
                <% end %>
              </td>
              <td class="text-center"><%= movie.genre.name %></td>
              <td class="col-xs-2 text-center"><%= render 'member/reviews/average-star', movie: movie %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @movies %>
      </div>
    </div>
  </div>
</div>