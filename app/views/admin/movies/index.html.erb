<div class="container">
  <h3>作品一覧</h3>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= link_to new_admin_movie_path, class: "btn btn-info pull-right" do %>
        <i class="fas fa-plus">新規作品登録</i>
      <% end %>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>作品ID</th>
            <th>作品名</th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @movies.each do |movie| %>
            <tr>
              <td><%= movie.id %></td>
              <td>
                <%= link_to admin_movie_path(movie) do %>
                  <%= movie.title %>
                <% end %>
              </td>
              <td><%= movie.genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>