<div class="body">
  <div class="container">
    <%= link_to "作品一覧", admin_movies_path %>
    >
    <%= link_to admin_movie_path do %>
      <%= @movie.title %>の詳細
    <% end %>
    >
    <%= @movie.title %>の編集
    <%= render "layouts/errors", obj: @movie %>
    <h2 class="text-center">作品編集</h2>
    <br><br>
      <div class="row">
        <div class="col-xs-12">
          <%= form_with model: @movie, url: admin_movie_path, local:true do |f| %>
            <div class="col-xs-4"></div>
            <div class="col-xs-8">
              <%= render "form", f: f, genre: @genre %>
              <div>
                <%= f.submit "内容を更新", class: "btn btn-primary btn-md center-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>