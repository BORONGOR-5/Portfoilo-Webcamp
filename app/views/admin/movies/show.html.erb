<div class="body">
  <div class="container">
    <h3>作品詳細</h3>
      <div class="row">
        <div class="col-xs-12">
          <div class="col-xs-4">
            <div>
	          <%= attachment_image_tag(@movie, :image, size: "300x200", fallback: "no_image.jpg") %>
	        </div>
          </div>
          <div class="col-xs-8">
            <div>
              <p><strong>ジャンル：</strong><%= @movie.genre.name %></p>
            </div>
            <div>
              <p><strong>作品名：</strong><%= @movie.title %></p>
            </div>
            <div>
              <p><strong>作品説明：</strong><%= @movie.introduction %></p>
            </div>
            <div>
               <%= link_to "編集", edit_admin_movie_path(@movie), class: "btn btn-primary btn-xs pull-right" %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>