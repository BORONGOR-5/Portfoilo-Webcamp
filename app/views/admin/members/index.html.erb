<div class="container">
  会員一覧
  <div class="row">
    <div class="col-xs-6" style="margin: 20px 0 50px 0">
      <h2 class='col-xs-8'>会員一覧</h2>
    </div>
    <div class="col-xs-12 row">
      <table class='table table-hover table-bordered'>
        <thead>
          <tr>
            <th class="text-center">ユーザーID</th>
            <th>ユーザー名</th>
            <th class="text-center">レビュー数</th>
            <th class="text-center">ステータス</th>
          </tr>
        </thead>
      
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td class="col-xs-1 text-center"><%= member.id %></td>
              <!--showページではなくeditページにとぶ-->
              <td class="col-xs-2"><%= link_to edit_admin_member_path(member), data: {"turbolinks" => false} do %><%= member.name %><% end %></td>
              <td class="col-xs-1 text-center"><%= link_to admin_member_reviews_path(member), data: {"turbolinks" => false} do %><%= member.reviews.count %><% end %></td>
              <td class="col-xs-1 text-center">
                <% if member.is_deleted == false %>
                  <span class="panel panel-default">有効</span>
                <% else %>
                  <span class="panel panel-default">退会済み</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @members %>
      </div>
    </div>
  </div>
</div>