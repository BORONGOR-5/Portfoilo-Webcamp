<div class="container">
  <div class="row">
    <div class="col-lg-12 center-block" style="margin: 20px 0 50px 0">
      <h3 class='col-lg-10'>会員一覧</h3>
    </div>
    <div class="col-lg-12 center-block">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr bgcolor="#dcdcdc">
            <th>ユーザーID</th>
            <th>ユーザー名</th>
            <th>レビュー数</th>
            <th>ステータス</th>
          </tr>
        </thead>
      
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.id %></td>
              <!--showページではなくeditページにとぶ-->
              <td><%= link_to edit_admin_member_path(member) do %><%= member.name %><% end %></td>
              <td><%= link_to admin_member_reviews_path(member) do %><%= member.reviews.count %><% end %></td>
              <td>
                <% if member.is_deleted == false %>
                  <span class="panel panel-default">有効</span>
                <% else %>
                  <span class="panel panel-default">退会済み</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>