<div class="container">
  <div class="row">
    <div class="col-lg-12 center-block" style="margin: 20px 0 50px 0">
      <h3 class='col-lg-10'>レビュー一覧</h3>
    </div>
    <div class="col-lg-12 center-block">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr bgcolor="#dcdcdc">
            <th>レビューID</th>
            <th>レビュータイトル</th>
            <th>評価</th>
            <th>ユーザー名</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.id %></td>
              <!--showページではなくeditページにとぶ-->
              <td><%= link_to edit_admin_review_path(review) do %><%= review.title %><% end %></td>
              <td></td>
              <!--showページではなくeditページにとぶ-->
              <td><%= link_to edit_admin_member_path(review.member) do %><%= review.member.name %><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>