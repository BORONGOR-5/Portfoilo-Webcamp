<div class="col-xs-2" style="margin: 20px 0 50px 0">
  <table class="table table-hover table-bordered">
    <thead bgcolor='#dcdcdc'>
      <th>ジャンル検索</th>
    </thead>
    <tbody>
      <% genres.each do |genre| %>
        <tr>
          <td><%= link_to genres_sort_path(genre) do %><%= genre.name %><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>